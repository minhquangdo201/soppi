@using Microsoft.AspNetCore.Identity;
@using soppi.Data;
@inject SignInManager<ApplicationUser> signInManager;
@model soppi.Models.ViewModel.ProductViewModel;
@{
    var userId = signInManager.UserManager.GetUserId(User);
}
<div>@userId</div>
<form method="post">
    <div class="mb-3 d-none">
        <input type="text" class="form-control" asp-for="UserId" value="@userId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Tên sản phẩm</label>
        <input type="text" class="form-control" asp-for="ProductName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Mô tả</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Hình ảnh</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Giá sản phẩm</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Số lượng</label>
        <input type="number" class="form-control" asp-for="StockQuantity">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Loại sản phẩm</label>
        <select class="form-select" aria-label="Default select example" asp-for="CategoryName">
            <option selected>Chọn loại</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryName">@c.CategoryName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="Add">Thêm</button>
</form>