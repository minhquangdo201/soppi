@model soppi.Models.Order;

@{
    var order = ViewBag.Order as soppi.Models.Order;
}

<div class="d-flex justify-content-center my-3">
    <div class="col-5 bg-white p-3 shadow" style="border-radius: 8px;">
        <h3 class="text-center">Chỉnh sửa đơn hàng</h3>
        <form asp-action="Update" asp-controller="Order">
            <input type="hidden" asp-for="@Model.Id" value="@order.Id"/>
            <div class="mb-3 fw-bold">
                <label class="form-label">Tên sản phẩm</label>
                <input disabled type="text" class="form-control" value="@order.Product.ProductName">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Số lượng</label>
                <input disabled type="text" class="form-control" value="@order.Quantity">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Thành tiền</label>
                <input disabled type="text" class="form-control" value="@order.TotalPrice">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Tên khách hàng</label>
                <input disabled type="text" class="form-control" value="@order.User.Name">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Địa chỉ</label>
                <input disabled type="text" class="form-control" value="@order.User.Address">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Số điện thoại</label>
                <input disabled type="text" class="form-control" value="@order.User.PhoneNumber">
            </div>
            <div class="mb-3 fw-bold">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" asp-for="@Model.Status" name="status">
                    @if (order.Status == "Pending")
                    {
                        <option value="Pending" selected>Chờ xác nhận</option>
                        <option value="Shipping">Đang giao hàng</option>
                        <option value="Shipped">Đã giao hàng</option>
                    }
                    else if (order.Status == "Shipping")
                    {
                        <option value="Pending">Chờ xác nhận</option>
                        <option value="Shipping" selected>Đang giao hàng</option>
                        <option value="Shipped">Đã giao hàng</option>
                    }
                    else if (order.Status == "Shipped")
                    {
                        <option value="Pending">Chờ xác nhận</option>
                        <option value="Shipping">Đang giao hàng</option>
                        <option value="Shipped" selected>Đã giao hàng</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
        </form>
    </div>
</div>