@model soppi.Models.Category
<form method="post">
    <div class="mb-3">
        <label for="">Tên danh mục</label>
        <input class="form-control" type="text" asp-for="CategoryName">
    </div>
    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-action="Add" asp-controller="Category">Thêm</button>
    <button class="btn btn-primary" asp-area="Admin" asp-action="Index" asp-controller="Category">Hủy</button>
</form>
